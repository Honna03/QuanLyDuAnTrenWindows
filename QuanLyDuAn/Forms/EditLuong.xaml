<Window x:Class="QuanLyDuAn.Forms.EditLuong"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chỉnh sửa lương nhân viên" 
        Height="350" 
        Width="450" 
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Window.Resources>
        <!-- Style cho TextBlock (Label) -->
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Style cho TextBox -->
        <Style TargetType="TextBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="BorderBrush" Value="#D1D1D1"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="5">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="2"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style cho Button -->
        <Style TargetType="Button">
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5" 
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#005EA6"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#003E75"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Tiêu đề -->
        <TextBlock Grid.Row="0" 
                   Text="Chỉnh sửa lương nhân viên" 
                   FontSize="20" 
                   FontWeight="Bold" 
                   Foreground="#333333" 
                   Margin="0,0,0,15"/>

        <!-- Họ và tên -->
        <TextBlock Grid.Row="1" Text="Họ và tên:" Margin="0,0,0,5"/>
        <TextBox Grid.Row="2" 
                 x:Name="FullNameTextBox" 
                 Margin="0,0,0,10" 
                 IsReadOnly="True" 
                 Background="#F5F5F5"
                 ToolTip="Tên nhân viên (không thể chỉnh sửa)"/>

        <!-- Email -->
        <TextBlock Grid.Row="3" Text="Email:" Margin="0,0,0,5"/>
        <TextBox Grid.Row="4" 
                 x:Name="EmailTextBox" 
                 Margin="0,0,0,10" 
                 IsReadOnly="True" 
                 Background="#F5F5F5"
                 ToolTip="Email nhân viên (không thể chỉnh sửa)"/>

        <!-- Lương -->
        <TextBlock Grid.Row="5" Text="Lương:" Margin="0,0,0,5"/>
        <TextBox Grid.Row="5" 
                 x:Name="SalaryTextBox" 
                 Margin="70,0,0,10" 
                 Width="200" 
                 HorizontalAlignment="Left"
                 PreviewTextInput="SalaryTextBox_PreviewTextInput"
                 ToolTip="Nhập lương nhân viên (chỉ nhập số)"/>

        <!-- Nút điều khiển -->
        <StackPanel Grid.Row="6" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    Margin="0,10,0,0">
            <Button Width="100" 
                    Click="Save_Click" 
                    Background="#28A745">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="💾" Margin="0,0,5,0"/>
                    <TextBlock Text="Lưu"/>
                </StackPanel>
            </Button>
            <Button Width="100" 
                    Click="Cancel_Click" 
                    Background="#DC3545">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="❌" Margin="0,0,5,0"/>
                    <TextBlock Text="Hủy"/>
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</Window>