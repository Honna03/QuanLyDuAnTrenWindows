<UserControl x:Class="QuanLyDuAn.Controls.RegisterControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="550" d:DesignWidth="600">
    <Grid Background="#F0F2F5">
        <Border Background="White" 
                Margin="50" 
                CornerRadius="15" 
                Padding="30"
                Width="450"
                Height="450"
                Effect="{StaticResource MaterialDesignShadow}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Tiêu đề -->
                <TextBlock Text="ĐĂNG KÝ TÀI KHOẢN"
                          FontSize="28"
                          FontWeight="Bold"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,40"
                          Foreground="#2D3748">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="#888" ShadowDepth="2" BlurRadius="5"/>
                    </TextBlock.Effect>
                </TextBlock>

                <!-- Form -->
                <StackPanel Grid.Row="1">
                    <!-- Tên đăng nhập -->
                    <TextBox x:Name="txtUsername"
                            Style="{StaticResource MaterialTextBox}"
                            Tag="Tên đăng nhập"
                            Margin="0,0,0,15"/>

                    <!-- Email -->
                    <TextBox x:Name="txtEmail"
                            Style="{StaticResource MaterialTextBox}"
                            Tag="Email"
                            Margin="0,0,0,15"/>

                    <!-- Mật khẩu -->
                    <PasswordBox x:Name="txtPassword"
                               Style="{StaticResource MaterialPasswordBox}"
                               Tag="Mật khẩu"
                               Margin="0,0,0,15"/>

                    <!-- Xác nhận mật khẩu -->
                    <PasswordBox x:Name="txtConfirmPassword"
                               Style="{StaticResource MaterialPasswordBox}"
                               Tag="Xác nhận mật khẩu"
                               Margin="0,0,0,20"/>

                    <!-- Nút Đăng ký -->
                    <Button x:Name="btnRegister"
                            Click="BtnRegister_Click"
                            Content="Đăng ký"
                            Style="{StaticResource MaterialButton}"
                            Background="#48BB78"
                            Width="150"
                            Height="45"
                            Margin="0,0,0,15"/>

                    <!-- Link quay lại đăng nhập -->
                    <TextBlock HorizontalAlignment="Center"
                              Margin="0,0,0,0">
                        <Hyperlink Click="BackToLogin_Click"
                                 Foreground="#3182CE"
                                 TextDecorations="None"
                                 Cursor="Hand">
                            Quay lại đăng nhập
                            <Hyperlink.Style>
                                <Style TargetType="Hyperlink">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="TextDecorations" Value="Underline"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Hyperlink.Style>
                        </Hyperlink>
                    </TextBlock>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>