<UserControl x:Class="QuanLyDuAn.Controls.LoginControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="600">
    <Grid Background="#F0F2F5" Margin="0,10,50,34">
        <Border Background="White" 
                Margin="50" 
                CornerRadius="15" 
                Padding="30"
                Width="450"
                Height="400"
                Effect="{StaticResource MaterialDesignShadow}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Tiêu đề -->
                <TextBlock Text="QUẢN LÝ DỰ ÁN"
                          FontSize="28"
                          FontWeight="Bold"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,40"
                          Foreground="#2D3748">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="#888" ShadowDepth="2" BlurRadius="5"/>
                    </TextBlock.Effect>
                </TextBlock>

                <!-- Form -->
                <StackPanel Grid.Row="1">
                    <TextBox x:Name="txtUsername"
                            Style="{StaticResource MaterialTextBox}"
                            Tag="Tên đăng nhập"
                            Margin="0,0,0,15"/>

                    <PasswordBox x:Name="txtPassword"
                               Style="{StaticResource MaterialPasswordBox}"
                               Tag="Mật khẩu"
                               Margin="0,0,0,15"/>

                    <!-- Link Quên mật khẩu -->
                    <TextBlock HorizontalAlignment="Right"
                              Margin="0,0,0,20">
                        <Hyperlink Click="ForgotPassword_Click"
                                 Foreground="#3182CE"
                                 TextDecorations="None"
                                 Cursor="Hand">
                            Quên mật khẩu?
                            <Hyperlink.Style>
                                <Style TargetType="Hyperlink">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="TextDecorations" Value="Underline"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Hyperlink.Style>
                        </Hyperlink>
                    </TextBlock>
                    <Button x:Name="btnLogin"
                            Click="BtnLogin_Click"
                            Content="Đăng nhập"
                            Style="{StaticResource MaterialButton}"
                            Background="#3182CE"
                            Width="150"
                            Height="45" RenderTransformOrigin="0.487,0.625"/>
                    <Button x:Name="btnRegister"
                            Click="BtnRegister_Click"
                            Content="Đăng ký"
                            Style="{StaticResource MaterialButton}"
                            Background="#48BB78"
                            Width="150"
                            Height="45" RenderTransformOrigin="0.501,0.642"/>

                    <!-- Nút Đăng nhập -->

                    <!-- Nút Đăng ký -->
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>