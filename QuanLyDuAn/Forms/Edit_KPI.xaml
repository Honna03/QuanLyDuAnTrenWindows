<UserControl x:Class="QuanLyDuAn.Forms.Edit_KPI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuanLyDuAn.Forms"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White" Margin="0,0,0,-228">
        <StackPanel Margin="20">
            <!-- Mã KPI -->
            <TextBlock Text="Mã KPI *" Foreground="Black" FontSize="14"/>
            <TextBox x:Name="txtMaKPI" Background="White" Foreground="Black" 
                     BorderBrush="#E0E0E0" BorderThickness="1" Padding="5" Margin="0,5,0,10"/>

            <!-- Tên KPI -->
            <TextBlock Text="Tên KPI *" Foreground="Black" FontSize="14"/>
            <TextBox x:Name="txtTenKPI" Background="White" Foreground="Black" 
                     BorderBrush="#E0E0E0" BorderThickness="1" Padding="5" Margin="0,5,0,10"/>

            <!-- Mô tả -->
            <TextBlock Text="Mô tả" Foreground="Black" FontSize="14"/>
            <TextBox x:Name="txtMoTa" Background="White" Foreground="Black" 
                     BorderBrush="#E0E0E0" BorderThickness="1" Padding="5" Margin="0,5,0,10"
                     Height="60" TextWrapping="Wrap" AcceptsReturn="True"/>

            <!-- Loại công thức (ComboBox) -->
            <TextBlock Text="Loại công thức *" Foreground="Black" FontSize="14"/>
            <ComboBox x:Name="cbLoaiCongThuc" Background="White" Foreground="Black" 
                      BorderBrush="#E0E0E0" BorderThickness="1" Padding="5" Margin="0,5,0,10">
                <!-- Các mục mẫu, có thể thêm trong code-behind hoặc binding -->
                <ComboBoxItem Content="Loại 1"/>
                <ComboBoxItem Content="Loại 2"/>
                <ComboBoxItem Content="Loại 3"/>
            </ComboBox>

            <!-- Ngày tạo -->
            <TextBlock Text="Ngày tạo *" Foreground="Black" FontSize="14"/>
            <TextBox x:Name="txtNgayTao" Background="White" Foreground="Black" 
                     BorderBrush="#E0E0E0" BorderThickness="1" Padding="5" Margin="0,5,0,10"
                     Text="dd/MM/yyyy"/>

            <!-- Ngày kết thúc -->
            <TextBlock Text="Ngày kết thúc" Foreground="Black" FontSize="14"/>
            <TextBox x:Name="txtNgayKetThuc" Background="White" Foreground="Black" 
                     BorderBrush="#E0E0E0" BorderThickness="1" Padding="5" Margin="0,5,0,10"
                     Text="dd/MM/yyyy"/>

            <!-- Trạng thái -->
            <TextBlock Text="Trạng thái" Foreground="Black" FontSize="14"/>
            <TextBox x:Name="txtTrangThai" Background="White" Foreground="Black" 
                     BorderBrush="#E0E0E0" BorderThickness="1" Padding="5" Margin="0,5,0,10"/>

            <!-- Người tạo -->
            <TextBlock Text="Người tạo *" Foreground="Black" FontSize="14"/>
            <TextBox x:Name="txtNguoiTao" Background="White" Foreground="Black" 
                     BorderBrush="#E0E0E0" BorderThickness="1" Padding="5" Margin="0,5,0,10"/>

            <!-- Người báo cáo -->
            <TextBlock Text="Người báo cáo" Foreground="Black" FontSize="14"/>
            <TextBox x:Name="txtNguoiBaoCao" Background="White" Foreground="Black" 
                     BorderBrush="#E0E0E0" BorderThickness="1" Padding="5" Margin="0,5,0,10"/>

            <!-- Nút Lưu và Hủy -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="Lưu" Background="#008080" Foreground="White" 
                        Height="40" Width="100" Margin="0,0,10,0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
